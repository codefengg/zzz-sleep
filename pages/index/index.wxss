.container {
  background: #11121D;
  min-height: 100vh;
  padding-left: 48rpx;
  padding-right: 48rpx;
  position: relative;
}

.background-image {
  position: absolute;
  width: 750rpx;
  height: 412rpx;
  top: 408rpx;
  left: 0;
  z-index: 1;
  pointer-events: none;
}

/* 确保其他元素在背景之上 */
.header-section, .audio-list, .player-section {
  position: relative;
  z-index: 2;
}

.page-title {
  text-align: center;
  font-size: 32rpx;
  color: rgba(255,255,255,0.7);
  margin-top: 40rpx;
  font-weight: 500;
}

.header-section {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-top: 48rpx;
}

.header-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-right: 22rpx;
}

.main-title {
  font-size: 48rpx;
  color: rgba(255,255,255,0.8);
  font-weight: bold;
}

.sub-title {
  font-size: 24rpx;
  color: rgba(255,255,255,0.4);
  margin-top: 24rpx;
  line-height: 1.6;
}

.moon {
  width: 124rpx;
  height: 124rpx;
  background: #9CAEC8;
  border-radius: 50%;
  margin: 60rpx 28rpx 0;
  position: relative;
}

.moon::before {
  content: '';
  position: absolute;
  width: 124rpx;
  height: 124rpx;
  border-radius: 50%;
  background-color: #11121D;
  animation: moonEclipse 10s infinite linear;
  transform-origin: center center;
  transform: translate(-75%, -75%);
}

@keyframes moonEclipse {
  0%, 5% {
    transform: translate(-75%, -75%);
  }
  10% {
    transform: translate(-70%, -70%);
  }
  15% {
    transform: translate(-65%, -65%);
  }
  20% {
    transform: translate(-60%, -60%);
  }
  25% {
    transform: translate(-55%, -55%);
  }
  30% {
    transform: translate(-50%, -50%);
  }
  35% {
    transform: translate(-45%, -45%);
  }
  40% {
    transform: translate(-40%, -40%);
  }
  45% {
    transform: translate(-35%, -35%);
  }
  50% {
    transform: translate(-30%, -30%);
  }
  /* 最大食月状态 - 在此停留50%的时间 */
  55%, 100% {
    transform: translate(-25%, -25%);
  }
}

.audio-list {
  margin-top: 60rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.audio-item {
  margin-bottom: 50rpx;
  position: relative;
}

.audio-item-inner {
  width: 100%;
  height: 100%;
  border-radius: 32rpx;
  overflow: hidden;
  position: relative;
}

.audio-item-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.audio-item-content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.2); /* 添加一个半透明遮罩 */
}

.audio-item-icon {
  width: 104rpx;
  height: 104rpx;
  margin-bottom: 20rpx;
}

.audio-item-name {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  font-weight: 500;
}

/* 迷你播放器样式 */
.mini-player-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100%;
}

.mini-player-info {
  display: flex;
  align-items: center;
  flex: 1;
  overflow: hidden;
}

.mini-player-cover {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
}

.mini-player-text {
  flex: 1;
  overflow: hidden;
}

.mini-player-name {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.mini-player-time {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 6rpx;
}

.mini-player-controls {
  margin-left: 20rpx;
}

.play-button {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.9);
  position: relative;
}

.play-button::before {
  content: '';
  position: absolute;
  left: 40%;
  top: 50%;
  transform: translate(-30%, -50%);
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 12rpx 0 12rpx 20rpx;
  border-color: transparent transparent transparent #11121D;
}

.play-button.playing::before,
.play-button.playing::after {
  content: '';
  position: absolute;
  width: 6rpx;
  height: 24rpx;
  background-color: #11121D;
  border: none;
  top: 50%;
  transform: translateY(-50%);
}

.play-button.playing::before {
  left: 38%;
}

.play-button.playing::after {
  right: 38%;
}

/* 全屏播放器样式 */
.full-player-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  padding: 20rpx 0;
}

.full-player-header {
  width: 100%;
  text-align: center;
  margin-bottom: 40rpx;
}

.full-player-title {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 500;
}

.full-player-cover-wrapper {
  width: 480rpx;
  height: 480rpx;
  margin: 40rpx 0;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.full-player-cover {
  width: 100%;
  height: 100%;
}

.full-player-cover.rotating {
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.full-player-info {
  width: 100%;
  text-align: center;
  margin: 30rpx 0;
}

.full-player-name {
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: bold;
}

.full-player-progress {
  width: 100%;
  padding: 0 20rpx;
  margin: 40rpx 0;
}

.time-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-bottom: 10rpx;
}

.progress-slider {
  margin: 10rpx 0;
}

.full-player-controls {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 60rpx;
}

.control-button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 30rpx;
  position: relative;
}

.control-button.play-button {
  background-color: rgba(255, 255, 255, 0.9);
  width: 120rpx;
  height: 120rpx;
}

.prev-button, .next-button {
  background-color: rgba(255, 255, 255, 0.2);
}

.prev-button::before {
  content: '';
  position: absolute;
  left: 46%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 12rpx 20rpx 12rpx 0;
  border-color: transparent rgba(255, 255, 255, 0.9) transparent transparent;
}

.next-button::before {
  content: '';
  position: absolute;
  left: 54%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 12rpx 0 12rpx 20rpx;
  border-color: transparent transparent transparent rgba(255, 255, 255, 0.9);
}

.player-section {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  /* 后续补充播放器样式 */
} 