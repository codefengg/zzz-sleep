.container {
  background: #11121D;
  min-height: 100vh;
  padding-left: 48rpx;
  padding-right: 48rpx;
  box-sizing: border-box;
}

.page-title {
  text-align: center;
  font-size: 32rpx;
  color: rgba(255,255,255,0.7);
  margin-top: 40rpx;
  font-weight: 500;
}

.header-section {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-top: 60rpx;
}

.header-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.main-title {
  font-size: 48rpx;
  color: rgba(255,255,255,0.8);
  font-weight: bold;
}

.sub-title {
  font-size: 28rpx;
  color: rgba(255,255,255,0.5);
  margin-top: 24rpx;
}

.header-icon {
  width: 124rpx;
  height: 124rpx;
  background: rgba(217,217,217,1);
  border-radius: 50%;
  margin-left: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.audio-list {
  margin-top: 60rpx;
  /* 后续补充item布局 */
}

.player-section {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  /* 后续补充播放器样式 */
} 