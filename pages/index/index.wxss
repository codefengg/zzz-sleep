.moon {
  width: 124rpx;
  height: 124rpx;
  background: #9CAEC8;
  border-radius: 50%;
  margin: 60rpx 28rpx 0;
  position: relative;
}

.moon::before {
  content: '';
  position: absolute;
  width: 126rpx;
  height: 126rpx;
  border-radius: 50%;
  background-color: #11121D;
  animation: moonEclipse 100s infinite linear;
  transform-origin: center center;
  transform: translate(-75%, -75%);
}

@keyframes moonEclipse {
  /* 前10个段：从-75%到-1% (0-45.45%时间) */
  0% { transform: translate(-75%, -75%); }
  4.55% { transform: translate(-67.5%, -67.5%); }  /* 第1段 */
  9.09% { transform: translate(-60%, -60%); }      /* 第2段 */
  13.64% { transform: translate(-52.5%, -52.5%); } /* 第3段 */
  18.18% { transform: translate(-45%, -45%); }     /* 第4段 */
  22.73% { transform: translate(-37.5%, -37.5%); } /* 第5段 */
  27.27% { transform: translate(-30%, -30%); }     /* 第6段 */
  31.82% { transform: translate(-22.5%, -22.5%); } /* 第7段 */
  36.36% { transform: translate(-15%, -15%); }     /* 第8段 */
  40.91% { transform: translate(-7.5%, -7.5%); }   /* 第9段 */
  45.45% { transform: translate(-1%, -1%); }       /* 第10段 */
  
  /* 停留2个段：在-1%位置保持 (45.45-54.55%时间) */
  45.45%, 54.55% { transform: translate(-1%, -1%); }
  
  /* 后10个段：从-1%回到-75% (54.55-100%时间) */
  59.09% { transform: translate(-7.5%, -7.5%); }   /* 第13段 */
  63.64% { transform: translate(-15%, -15%); }     /* 第14段 */
  68.18% { transform: translate(-22.5%, -22.5%); } /* 第15段 */
  72.73% { transform: translate(-30%, -30%); }     /* 第16段 */
  77.27% { transform: translate(-37.5%, -37.5%); } /* 第17段 */
  81.82% { transform: translate(-45%, -45%); }     /* 第18段 */
  86.36% { transform: translate(-52.5%, -52.5%); } /* 第19段 */
  90.91% { transform: translate(-60%, -60%); }     /* 第20段 */
  95.45% { transform: translate(-67.5%, -67.5%); } /* 第21段 */
  100% { transform: translate(-75%, -75%); }       /* 第22段 */
}

.audio-list {
  margin-top: 132rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.audio-item {
  margin-bottom: 50rpx;
  position: relative;
  border-radius: 36rpx;
}

.audio-item-selected::after{
  content: '';
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  border-color: rgba(255, 255, 255, 0.5);
  border-radius: 38rpx;
  border-width: 6rpx;
  border-style: solid;
  box-sizing: border-box;
}

.audio-item-inner {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}

.audio-item-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.audio-item-content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  /* background: rgba(0, 0, 0, 0.2); */
}

.audio-item-icon {
  width: 104rpx;
  height: 104rpx;
  margin-bottom: 20rpx;
}

.audio-item-name {
  font-size: 34rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  font-weight: 500;
}

/* 迷你播放器样式 */
.mini-player-content {
  width: 100%;
  height: 100rpx;
  padding: 0 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 左侧播放区域 */
.mini-player-left {
  display: flex;
  align-items: center;
  flex: 1;
  overflow: hidden;
}

/* 音频信息 */
.mini-player-info {
  margin-left: 24rpx;
  flex: 1;
  overflow: hidden;
}

.mini-player-name {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.8);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: 500;
}

.mini-player-timer {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.4);
  margin-top: 4rpx;
}

/* 右侧倒计时按钮 */
.mini-player-right {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 32rpx;
}

.timer-icon {
  width: 44rpx;
  height: 50rpx;
}

/* 全屏播放器样式 */
.full-player-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  position: relative;
}

.full-player-cover-container{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 99;
  overflow: hidden; /* 确保内容不会溢出 */
}

.full-player-cover-back{
  width: 100%;
  height: 100%;
  object-fit: cover; /* 确保图片正确填充容器 */
  /* 移除直接应用于图片的模糊效果 */
  filter: none;
  transform: none;
}

/* 专门的模糊层 */
.blur-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(78, 78, 78, 0.16);
  z-index: 2;
}

.full-player-content-con{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 100;
  transform: translateY(-20%);
}

.full-player-cover-icon{
  width: 230rpx;
  height: 230rpx;
  margin-bottom: 64rpx;
}

.full-player-content-con-text{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.full-player-content-con-text-title{
  font-size: 40rpx;
  color: rgba(255, 255, 255, 1);
  margin-bottom: 16rpx;
}

.full-player-content-con-text-timer{
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.full-player-content-con-text-tips{
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 16rpx;
}

.full-player-header {
  width: 100%;
  text-align: center;
  margin-bottom: 40rpx;
}

.full-player-title {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 500;
}

.full-player-cover-wrapper {
  width: 480rpx;
  height: 480rpx;
  margin: 40rpx 0;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.full-player-cover {
  width: 100%;
  height: 100%;
}

.full-player-cover.rotating {
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.full-player-info {
  width: 100%;
  text-align: center;
  margin: 30rpx 0;
}

.full-player-name {
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: bold;
}

.full-player-progress {
  width: 100%;
  padding: 0 20rpx;
  margin: 40rpx 0;
}

.time-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-bottom: 10rpx;
}

.progress-slider {
  margin: 10rpx 0;
}

/* 更新全屏播放器控制按钮样式 */
.full-player-controls {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 80rpx;
}

.control-button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 30rpx;
  position: relative;
}

.control-button.play-button {
  background-color: rgba(255, 255, 255, 0.8);
  width: 120rpx;
  height: 120rpx;
}

.prev-button, .next-button {
  background-color: rgba(255, 255, 255, 0.2);
}

.prev-button::before {
  content: '';
  position: absolute;
  left: 46%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 12rpx 20rpx 12rpx 0;
  border-color: transparent rgba(255, 255, 255, 0.8) transparent transparent;
}

.next-button::before {
  content: '';
  position: absolute;
  left: 54%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 12rpx 0 12rpx 20rpx;
  border-color: transparent transparent transparent rgba(255, 255, 255, 0.8);
}

.player-section {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  /* 后续补充播放器样式 */
}

/* 倒计时选择器弹窗样式 */
.timer-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.timer-modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
}

.timer-modal-mask.fade-in {
  animation: fadeIn 0.3s ease-out forwards;
}

.timer-modal-mask.fade-out {
  animation: fadeOut 0.3s ease-in forwards;
}

.timer-modal-close{
  color: rgba(255, 255, 255, 0.8);
  font-weight: bold;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes fadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}

.timer-modal-content {
  position: relative;
  width: 702rpx;
  max-height: 80vh;
  background-color: #11121D;
  border-radius: 32rpx 32rpx 0 0;
  overflow: hidden;
  margin-bottom: 0;
}

.timer-modal-content.slide-up {
  animation: modalSlideUp 0.3s ease-out forwards;
}

.timer-modal-content.slide-down {
  animation: modalSlideDown 0.3s ease-in forwards;
}

@keyframes modalSlideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

@keyframes modalSlideDown {
  from {
    transform: translateY(0);
  }
  to {
    transform: translateY(100%);
  }
}

.timer-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 48rpx 20rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.timer-modal-title {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 600;
}

