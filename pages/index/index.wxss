.container {
  background: #11121D;
  min-height: 100vh;
  padding-left: 48rpx;
  padding-right: 48rpx;
  position: relative;
}

.background-image {
  position: absolute;
  width: 750rpx;
  height: 412rpx;
  top: 408rpx;
  left: 0;
  z-index: 1;
  pointer-events: none;
}

/* 确保其他元素在背景之上 */
.header-section, .audio-list, .player-section {
  position: relative;
  z-index: 2;
}

.page-title {
  text-align: center;
  font-size: 32rpx;
  color: rgba(255,255,255,0.7);
  margin-top: 40rpx;
  font-weight: 500;
}

.header-section {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-top: 48rpx;
}

.header-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-right: 22rpx;
}

.main-title {
  font-size: 48rpx;
  color: rgba(255,255,255,0.8);
  font-weight: bold;
}

.sub-title {
  font-size: 24rpx;
  color: rgba(255,255,255,0.4);
  margin-top: 24rpx;
  line-height: 1.6;
}

.moon {
  width: 124rpx;
  height: 124rpx;
  background: #9CAEC8;
  border-radius: 50%;
  margin: 60rpx 28rpx 0;
  position: relative;
}

.moon::before {
  content: '';
  position: absolute;
  width: 124rpx;
  height: 124rpx;
  border-radius: 50%;
  background-color: #11121D;
  animation: moonEclipse 10s infinite linear;
  transform-origin: center center;
  transform: translate(-75%, -75%);
}

@keyframes moonEclipse {
  0%, 5% {
    transform: translate(-75%, -75%);
  }
  10% {
    transform: translate(-70%, -70%);
  }
  15% {
    transform: translate(-65%, -65%);
  }
  20% {
    transform: translate(-60%, -60%);
  }
  25% {
    transform: translate(-55%, -55%);
  }
  30% {
    transform: translate(-50%, -50%);
  }
  35% {
    transform: translate(-45%, -45%);
  }
  40% {
    transform: translate(-40%, -40%);
  }
  45% {
    transform: translate(-35%, -35%);
  }
  50% {
    transform: translate(-30%, -30%);
  }
  /* 最大食月状态 - 在此停留50%的时间 */
  55%, 100% {
    transform: translate(-25%, -25%);
  }
}

.audio-list {
  margin-top: 60rpx;
  /* 后续补充item布局 */
}

.player-section {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  /* 后续补充播放器样式 */
} 