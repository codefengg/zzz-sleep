.picker-content {
  padding: 32rpx 48rpx 48rpx;
}

.picker-body {
  position: relative;
  height: 400rpx;
  margin-bottom: 60rpx;
}

.unit-label {
  position: absolute;
  right: 30%;
  top: 50%;
  transform: translateY(-50%);
  color: rgba(255, 255, 255, 0.8);
  font-size: 32rpx;
  z-index: 10;
  font-weight: 500;
}

.picker-view {
  width: 100%;
  height: 400rpx;
}

.picker-item {
  line-height: 100rpx;
  text-align: center;
  color: rgba(255, 255, 255, 0.9);
  font-size: 40rpx;
  font-weight: 500;
}

.quick-settings {
  margin-top: 40rpx;
}

.quick-title {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 32rpx;
  font-weight: 500;
}

.quick-options {
  display: flex;
  justify-content: space-between;
  margin-bottom: 48rpx;
  gap: 20rpx;
}

.quick-option {
  flex: 1;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.quick-option:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}

.save-button {
  width: 100%;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.9);
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.save-button:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.98);
} 