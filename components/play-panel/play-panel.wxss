/* components/play-panel/play-panel.wxss */
.panel-area {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  pointer-events: none;
  height: 200vh;
}

.panel-wrapper {
  width: 100%;
  height: 100vh;
  border-radius: 40rpx 40rpx 0 0;
  overflow: hidden;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.15);
  pointer-events: auto;
  background-color: #fff;
  position: relative;
}

/* 拖动把手样式 */
.drag-handle {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 101;
}

.arrow {
  height: 8rpx;
  position: relative;
  transition: transform 0.3s ease;
  width: 64rpx;
}

.arrow-left,
.arrow-right {
  border-radius: 4rpx;
  display: inline-block;
  height: 8rpx;
  position: absolute;
  transform: rotate(180deg);
  width: 36rpx;
  background-color: #ffffff;
  transition: transform 0.3s ease;
}

.arrow-left {
  right: 28rpx;
}

.arrow-right {
  left: 28rpx;
}

/* 使用CSS变量实现平滑过渡 */
.arrow-left {
  transform: rotate(calc(180deg + var(--progress, 0) * 20deg));
}

.arrow-right {
  transform: rotate(calc(180deg - var(--progress, 0) * 20deg));
}

/* 当接近完全展开时的最终状态 */
.downward .arrow-left {
  transform: rotate(200deg);
}

.downward .arrow-right {
  transform: rotate(160deg);
}

.drag-handle .arrow {
  opacity: 0.4;
}

/* 面板内容区 */
.panel-content {
  height: calc(100% - 48rpx);
  overflow: hidden;
  position: relative;
}

/* 迷你播放器样式 - 按照源码使用绝对定位 */
.mini-player {
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  margin-top: 48rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}

/* 全屏播放器样式 - 按照源码使用绝对定位 */
.full-player {
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

/* 过渡层样式 */
.transition-layer {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
  pointer-events: none;
}

/* 确保过渡层迷你播放器的样式与普通迷你播放器一致 */
.mini-player.transition-layer {
  margin-top: 48rpx;
}

/* 全屏播放器过渡层 */
.full-player.transition-layer {
  z-index: 99;
} 