/* components/play-panel/play-panel.wxss */
.panel-area {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  pointer-events: none;
  height: 200vh;
}

.panel-wrapper {
  width: 100%;
  height: 100vh;
  border-radius: 40rpx 40rpx 0 0;
  overflow: hidden;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.15);
  pointer-events: auto;
  background-color: #fff;
  position: relative;
}

/* 拖动把手样式 */
.drag-handle {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 101;
}

.drag-bar {
  width: 62rpx;
  height: 8rpx;
  background-color: rgba(255, 255, 255, 0.4);
  border-radius: 4rpx;
  transition: width 0.3s, opacity 0.3s;
}

.drag-handle.expanded .drag-bar {
  width: 60rpx;
  opacity: 0.5;
}

/* 面板内容区 */
.panel-content {
  height: calc(100% - 48rpx);
  overflow: hidden;
  position: relative;
}

/* 迷你播放器样式 */
.mini-player {
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  margin-top: 48rpx;
}

/* 全屏播放器样式 */
.full-player {
  height: 100%;
  width: 100%;
}

/* 过渡层样式 */
.transition-layer {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
  pointer-events: none;
}

/* 确保过渡层迷你播放器的样式与普通迷你播放器一致 */
.mini-player.transition-layer {
  margin-top: 48rpx;
}

/* 全屏播放器过渡层 */
.full-player.transition-layer {
  z-index: 99;
} 