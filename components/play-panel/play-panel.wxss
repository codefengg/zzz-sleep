/* components/play-panel/play-panel.wxss */
.panel-area {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  pointer-events: none;
  height: 200vh;
}

.panel-wrapper {
  width: 100%;
  height: 100vh;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.15);
  pointer-events: auto;
}

/* 拖动把手样式 */
.drag-handle {
  width: 100%;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 8rpx 0;
}

.drag-bar {
  width: 80rpx;
  height: 6rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 6rpx;
  transition: width 0.3s, opacity 0.3s;
}

.drag-handle.expanded .drag-bar {
  width: 60rpx;
  opacity: 0.5;
}

/* 面板内容区 */
.panel-content {
  height: calc(100% - 48rpx);
  overflow: hidden;
}

/* 动画效果 */
.animated {
  transition: opacity 0.3s, transform 0.3s;
}

/* 迷你播放器样式 */
.mini-player {
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
}

/* 全屏播放器样式 */
.full-player {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 32rpx;
} 